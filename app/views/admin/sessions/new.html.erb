<h2>管理者ログイン</h2>
<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="ml-auto">
      <%= f.label "メールアドレス" %>
    </div>
    <div class="form-group mx-auto col-6">
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "30*30" %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="ml-auto">
      <%= f.label "パスワード　　" %>
    </div>
    <div class="form-group mx-auto col-6">
        <div class="field">
          <%= f.password_field :password, autocomplete: "current-password", :size => "30*30"  %>
        </div>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
        <div>
          <%= f.submit "ログイン", class:"action btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
    <%= render "admin/shared/links" %>

</div>