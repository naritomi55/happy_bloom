<div class="container">
  <h2>ユーザー編集</h2>
  <div class="row">
    <div class="user_image">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "400x400", class:"rounded-circle" %>
      <% else %>
        <%= image_tag 'no_image', size: "400x400", class:"rounded-circle" %>
      <% end %>
    </div>
    <div class="offset-md-1">
      <h4 class="border-bottom">name</h4>
        <p>　<%= @user.name %></p>
      <br>
      <h4 class="border-bottom">introduction</h4>
        <p>　<%= @user.introduction %></p>
      <br>
      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <h4 class="border-bottom">status</h4>
        <p><%= f.radio_button :is_active, true %>有効
        <%= f.radio_button :is_active, false %>退会</p>
        <%= f.submit '変更を保存', class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>