<div class="container">
  <h4>ユーザー一覧</h4>
  <table class="table table-hover border-bottom table-inverse">
  　<thead class="thead-light">
     <tr>
       <th>氏名</th>
       <th>メールアドレス</th>
       <th>ステータス</th>
      </tr>
  　</thead>
    　<tbody>
    　<% @users.each do |user| %>
    　   <tr>
          <td>
    　      <%= link_to edit_admin_user_path(user.id) do %>
    　        <%= user.name %>
    　      <% end %>
    　     </td>
    　     <td><%= user.email %></td>
    　     <td class="text-success font-weight-bold"><%= user.is_active == true ? "有効" : "退会" %></td>
        </tr>
    　   <% end %>
    　</tbody>
  </table>
<%= paginate @users %>
</div>
</div>