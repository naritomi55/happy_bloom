<div class="container">
  <h1>タグ一覧・追加</h1>
  <%= form_with model: @tag, url: admin_tags_path do |f| %>
    <div class="row w-50 h-50">
      <div class="col-3">
        <%= f.label "タグ" %>
      </div>
      <div class="col-8">
        <%= f.text_field :name %>
      </div>
      <div class="col-1">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  </br>

  <table class="table table-hover table-inverse border-bottom col-5">
    <thead class="thead-light">
      <tr>
        <th>ジャンル</th>
      </tr>
    </thead>
      <tbody>
        <% @tags.each do |tag| %>
         <tr>
          <td>
            <%= tag.name %>
            <span style="float: right;"><%= link_to '削除する', admin_tag_path(tag.id), method: :delete, data: {confirm: "削除しますか？"}, class: 'btn btn-danger' %></span>
            <span style="float: right;"><%= link_to '編集する', edit_admin_tag_path(tag.id), class: 'btn btn-success' %></span>
          </td>
         </tr>
        <% end %>
      </tbody>
  </table>
</div>