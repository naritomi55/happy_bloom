<div class="container">
  <h2>ユーザー情報編集</h2>
  <%= form_with model: @user, url: users_path, method: :patch do |f| %>
  <div class="row">
    <div class="user_image">
      <%= f.label :profile_image do %>
        <% if current_user.profile_image.attached? %>
          <%= image_tag current_user.profile_image, size: "400x400", class: 'avatar' %>
        <% else %>
          <%= image_tag 'no_image', size: "400x400", class: 'avatar' %>
        <% end %>
        <%= f.file_field :profile_image, class: 'uploader', style: 'display:none', accept: "image/*" %>
      <% end %>
    </div>
    <div class="offset-md-1">
      <h4 class="border-bottom"><%= f.label "name" %></h4>
        <%= f.text_field :name %>
      <br>
      <br>
      <h4 class="border-bottom"><%= f.label "introduction" %></h4>
        <p><%= f.text_field :introduction %></p>
      <br>
      <div>
        <%= f.submit '編集内容を保存', class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>