<div class="container">
  <h2>マイページ</h2>
  <div class="row">
    <div class="user_image">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, size: "400x400", class:"rounded-circle" %>
      <% else %>
        <%= image_tag 'no_image', size: "400x400", class:"rounded-circle" %>
      <% end %>
    </div>
    <div class="offset-md-1">
      <h4 class="border-bottom">name</h4>
        <p>　<%= @user.name %></p>
      <br>
      <h4 class="border-bottom">introduction</h4>
        <p>　<%= @user.introduction %></p>
      <br>
      <div>
        <% if @user == current_user %>
          <%= link_to '編集する', users_edit_path, class:'action btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
  <%= link_to '投稿一覧', post_images_user_path(@user) %>
  <%= link_to 'いいね一覧',favorites_user_path(@user) %>
</div>