<div class="container">
  <h2>sign up</h2></br>

  <div class="offset-md-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "user/shared/error_messages", resource: resource %>
    <div class="form-group row">
      <div class="col-2 text-left mb-auto"><%= f.label "name" %></div>
      <div class="col-9 text-left ml-auto">
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "email" %></div>
      <div class="col-9 text-left">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      </div>
      <div class="col-9 text-left">
      <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-3 text-left mb-auto"><%= f.label "password(確認用)" %></div>
      <div class="col-9 text-left">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="col-md-3 offset-md-2">
      <%= f.submit "新規登録", class:'action btn btn-success' %>
    </div>
  <% end %>
  </div>

  <h4>既に登録済みの方</h4>
  　　<%= render "user/shared/links" %>からログインしてください。
</div>