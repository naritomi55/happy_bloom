<div class="container">
  <h2>新規投稿</h2>
  <%= form_with model: @post_image, url: post_images_path, method: :post do |f| %>
  <div class="row">
    <div class="post_image">
      <%= f.label :image do %>
        <%= f.file_field :image, class: 'uploader', accept: "image/*" %>
      <% end %>
    </div>
    <div class="offset-md-1">
      <h4 class="border-bottom"><%= f.label "title" %></h4>
        <%= f.text_field :title %>
      <br>
      <br>
      <h4 class="border-bottom"><%= f.label "introduction" %></h4>
        <p><%= f.text_field :introduction %></p>
      <br>
      <div class='form-group'>
          <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
              <div class='form-check'>
                  <%= tag.label class: 'form-check-label' do %>
                      <%= tag.check_box class: 'form-check-input' %>
                      <%= tag.text %>
                  <% end %>
              </div>
          <% end %>
      </div>
      <div>
        <%= f.submit '投稿', class:"btn btn-success" %>
      </div>
    </div>
  </div>
  <% end %>
</div>